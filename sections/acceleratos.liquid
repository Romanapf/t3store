<div>
    {% for block in section.blocks %}
        <a class="t3-carousel__slide" href="{{ block.settings.button_link }}">
        <div class="t3-carousel__slide-container">
            <img class="t3-carousel__slide-image" src="{{ block.settings.image | img_url: 'master'}}" />
            <h4 class="t3-carousel__slide-title">
            {{ block.settings.title }}
            </h4>
        </div>
        </a>
    {% endfor %}
</div>

{% schema %}
{
"name": "Accelerators",
"settings": [],
"blocks" : [
{
"type" : "column",
"name" : "slide",
"settings" : [
{
"type" : "text",
"id" : "title",
"label" : "Title",
"default" : "Title"
},
{
"type": "image_picker",
"id" : "image",
"label" : "Image"
},
{
"type" : "url",
"id" : "button_link",
"label" : "URL"
}
]
}
],
"presets": [
{
"name": "Accelerators"
}
]
}

{% endschema %}

{% stylesheet %}
.t3-accelerator{
    width: 100%;
    height: 100%;
    margin: 0 auto;
    padding: 0;
    position: relative;
    overflow: hidden;
    display: flex;
    align-items: center;
    justify-content: center;
    background-color: #fff;
    border-radius: 5px;
    gap: 16px;
}

.t3-carousel__slide{
    width: 100%;
    height: 100%;
    display: flex;
    align-items: center;
    justify-content: center;
    flex-direction: column;
    background-color: #fff;
    border-radius: 5px;
    text-decoration:none;
    cursor: pointer;
}

.t3-carousel__slide-container{
width: 100%;
height: 100%;
display: flex;
align-items: flex-start;
justify-content: center;
flex-direction: column;
background-color: #fff;
border-radius: 5px;
}

.t3-carousel__slide-image{
width: 100%;
height: 300px;
object-fit: cover;
border-radius: 16px;
}

.t3-carousel__slide-title{
font-size: 1.5rem;
font-weight: 500;
margin-top: 20px;
text-align: center;
font-family: var(--font-body-family);
}


{% endstylesheet %}

