<div class="t3-accelerator page-width">
    {% for block in section.blocks %}
        <a class="t3-accelerator__slide" href="{{ block.settings.button_link }}">
            <div class="t3-accelerator__slide-container">
                <img class="t3-accelerator__slide-image" src="{{ block.settings.image | img_url: 'master'}}" />
                <h4 class="t3-accelerator__slide-title">
                {{ block.settings.title }}
                </h4>
            </div>
        </a>
    {% endfor %}
</div>

{% schema %}
{
"name": "Accelerators",
"settings": [],
"blocks" : [
{
"type" : "column",
"name" : "slide",
"settings" : [
{
"type" : "text",
"id" : "title",
"label" : "Title",
"default" : "Title"
},
{
"type": "image_picker",
"id" : "image",
"label" : "Image"
},
{
"type" : "url",
"id" : "button_link",
"label" : "URL"
}
]
}
],
"presets": [
{
"name": "Accelerators"
}
]
}

{% endschema %}

{% stylesheet %}
.t3-accelerator{
    width: 100%;
    display: grid;
    grid-template-columns: repeat(12, 1fr);
    grid-gap: 8px;
    padding: 0 5rem;
}

.t3-accelerator__slide{
    grid-column: span 3;
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: center;
    text-decoration: none;
}

.t3-accelerator__slide-container{
width: 100%;
height: 100%;
display: flex;
align-items: flex-start;
justify-content: center;
flex-direction: column;
background-color: #fff;
border-radius: 5px;
}

.t3-accelerator__slide-image{
width: 100%;
height: 500px;
object-fit: cover;
border-radius: 16px;
}

.t3-accelerator__slide-title{
font-size: 2rem;
font-weight: 800;
margin-top: 20px;
text-align: center;
font-family: var(--font-body-family);
}


{% endstylesheet %}

