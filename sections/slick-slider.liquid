{{ 'slick.js' | asset_url | script_tag }}
{{ 'slick.css' | asset_url | stylesheet_tag }}
{{ 'slick-theme.css' | asset_url | stylesheet_tag }}


{% assign slick = section.settings.slick | json %}

<section>
  {%- if section.settings.heading != blank -%}
  <h2 class='page-width'>{{section.settings.heading}}</h2>
  {%- endif -%}
  <div class="rapf-carousel">
    {%- for block in section.blocks -%}
    <a href='{{ block.settings.url }}' class="button" id="ViewAllButton-{{ block.settings.url }}" aria-labelledby="ViewAllButton-{{ block.settings.url }} SectionHeading-{{ block.settings.url }}">
      <div class="rapf-carousel__slide">
        <div class="rapf-carousel__slide-container">
          <img class="rapf-carousel__slide-image" src="{{ block.settings.image | img_url: 'master'}}" />
          <h4 class="rapf-carousel__slide-title">
            {{ block.settings.title }}
          </h4>
        </div>
      </div>
    </a>
    {% endfor %}
  </div>
</section>

{{ "jquery-1.11.0.min.js" | asset_url | script_tag }}
{{ "jquery-migrate-1.2.1.min.js" | asset_url | script_tag }}
{{ "slick.min.js" | asset_url | script_tag }}


{% assign slick = section.settings.slick | json %}

<script>
  $('.rapf-carousel').slick({
    centerMode: true,
    centerPadding: '60px',
    slidesToShow: 5,
    responsive: [
      {
        breakpoint: 768,
        settings: {
          arrows: true,
          centerMode: true,
          centerPadding: '40px',
          slidesToShow: 3
        }
      },
      {
        breakpoint: 480,
        settings: {
          arrows: true,
          centerMode: true,
          centerPadding: '40px',
          slidesToShow: 1
        }
      }
    ]
  });
</script>
{% schema %}
{
"name": "Slick Slider",
"settings": [
{
"type": "text",
"id": "heading",
"label" : "Heading",
"default" : "My Custom Heading"
}
],
"blocks" : [
{
"type" : "column",
"name" : "slide",
"settings" : [
{
"type" : "text",
"id" : "title",
"label" : "Title",
"default" : "Title"
},
{
"type": "image_picker",
"id" : "image",
"label" : "Image"
},
{
"type" : "url",
"id" : "url",
"label" : "URL",
"default" : "https://www.t3store.com"
}
]
}
],
"presets": [
{
"name": "Slick Slider"
}
]
}
{% endschema %}
{% stylesheet %}
.rapf-carousel{
width: 100%;
height: 100%;
margin: 0 auto;
padding: 0;
position: relative;
overflow: hidden;
display: flex;
align-items: center;
justify-content: center;
background-color: #fff;
border-radius: 5px;
gap: 16px;
}

.rapf-carousel__slide{
width: 100%;
height: 100%;
display: flex;
align-items: center;
justify-content: center;
flex-direction: column;
background-color: #fff;
border-radius: 5px;
}

.rapf-carousel__slide-container{
width: 100%;
height: 100%;
display: flex;
align-items: flex-start;
justify-content: center;
flex-direction: column;
background-color: #fff;
border-radius: 5px;
}

.rapf-carousel__slide-image{
width: 100%;
height: 300px;
object-fit: cover;
border-radius: 16px;
}

.rapf-carousel__slide-title{
  font-size: 1.5rem;
  font-weight: 500;
  margin-top: 20px;
  text-align: center;
  visibility: hidden;
  font-family: var(--font-body-family);
}

.slick-current .rapf-carousel__slide-title{
visibility: visible;
}


{% endstylesheet %}

